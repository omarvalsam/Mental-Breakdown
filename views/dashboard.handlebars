
	<!-- Main -->
				<section id="main" class="left-sidebar is-preload">
					<div class="container">
						<div class="row">
							<div class="col-3 col-12-medium">

								<!-- Sidebar -->

								<!-- create project box -->
									<section class="box">
										<header>
											<h3>Create a Project Here!</h3>
										</header>
										<p>Build tasks, add collaborators and tackle this project!!</p>
										<footer>
											<button type="button" id="create-new" class=" button" type="button" data-bs-toggle="modal" data-bs-target="#projectModal">
												Build a New Project!
											</button>
										</footer>
									</section>

									<!-- Notifications box -->
									<section class="box">
										<header>
											<h3>Notifications</h3>
										</header>
									
										<ul class="divided" id="notificationsBox">
											
										</ul>
									</section>

							</div>
							
              <!-- Content -->
							<div class="col-9 col-12-medium imp-medium">
									<article class="box post">
										<div class="col-12">
											<!-- Projects -->
												<section>
													<header class="major">
														<h2>My Projects</h2>
													</header>
													{{#if projects.length}}
													<div class="row">
														{{#each projects as |project|}}
														<div class="col-4 col-6-medium col-12-small">
														{{> project-info project}}
														</div>
														{{/each}}
														{{else}}
														<div class="col-12">
														<h4>You do not have any projects.</h4>
														</div>
													{{/if}}
												  </div>

                        </section>
										</div>
										
									</article>
							  </div>

						</div>
					</div>
				</section>

